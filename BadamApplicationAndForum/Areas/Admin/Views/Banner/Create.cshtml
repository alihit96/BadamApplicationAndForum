@model BadamApplicationAndForum.Data.ViewModels.SliderCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-md-6 col-lg-4">
        <div>
            @if (TempData["FileIncompatible"] != null)
            {
                <div class="alert alert-danger">@TempData["FileIncompatible"].ToString()</div>
            }
        </div>
        <form asp-action="Create" enctype="multipart/form-data" onsubmit="return validateMyForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" autocomplete="off" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:inline-block;">
                <div class="col-sm-10 text-center">
                        <input asp-for="ImageUrl" id="bannerImage" type="file" accept=".png, .jpg, .jpeg" />
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="ایجاد" class="btn btn-dark btn-rounded" />
                </div>
                <a class="mr-2 btn text-danger" asp-action="Index">بازگشت</a>
            </div>
        </form>
    </div>
</div>

<script>
   function validateMyForm() {
       var input = document.getElementById('bannerImage');
        var file = input.files[0];
        if (file.size > 2048000) {
            alert("حجم فایل بیشتر از 2 مگابایت است");
            return false;
        }
        else {
            return true;
        }

    };
</script>

