@model IEnumerable<BadamApplicationAndForum.Data.ViewModels.ProfessorsListViewModel>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using BadamApplicationAndForum.Helpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Personels.Create)).Result.Succeeded)
    {
        <a asp-action="Create" asp-controller="Personel" asp-area="Admin" class="btn btn-outline-info btn-rounded">ایجاد استاد</a>
    }
</p>

